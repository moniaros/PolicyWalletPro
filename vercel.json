{
  "$schema": "https://vercel.com/schemas/vercel.json",
  "version": 2,
  "buildCommand": "vite build && esbuild server/index-prod.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js",
  "devCommand": "NODE_ENV=development tsx server/index-dev.ts",
  "installCommand": "npm install",
  "framework": "express",
  "public": false,
  "env": {
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "server/index-prod.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index-prod.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/auth/(.*)",
      "dest": "server/index-prod.ts",
      "methods": ["GET", "POST", "DELETE"]
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|map|png|jpg|jpeg|svg|gif|ico|woff|woff2|ttf|eot)$)",
      "dest": "/dist/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server/index-prod.ts"
    }
  ]
}
